<h1>New user</h1>

<%= link_to 'Back to Login instead of creating a new user', :controller => "sessions", :action => "new" %>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %> (username)<br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :identity_url %> - (open-id url) <br />
    <%= f.text_field :identity_url %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', users_path %>
